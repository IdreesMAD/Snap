<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="madhaters.snap.MainActivity"
    android:background="#072816">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:weightSum="1">

        <Button
            android:id="@+id/mainPageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:text=">>"
            android:textStyle="italic"
            android:textSize="30sp"
            android:padding="0dp"
            android:background="#072816"
            />

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_full_open_on_phone"
            android:layout_weight="1"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:background="@color/colorPrimary">

            <Button
                android:id="@+id/cameraBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#2e3654"
                android:text="Camera"
                android:textSize="19sp"
                android:textStyle="normal"
                android:layout_weight="1"
                android:layout_marginRight="5dp"/>


            <Button
                android:id="@+id/photoLibBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2e3654"
                android:text="Gallary"
                android:textSize="19sp"
                android:textStyle="normal"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
